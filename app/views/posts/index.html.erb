<div class="container-flex">
    <div class="d-flex flex-row justify-content-around flex-wrap m-1">
        <% @posts.each do |post| %>
            <div class="card my-3" style="width: 25rem;">
                <div class="card-body">
                    <h5 class="card-title"><%= link_to post.title, post_path(post), class: "text-decoration-none" %></h5>
                    <p class="card-text"><%=post.body.truncate(50)%></p>
                </div>
            </div>
        <% end %>
    </div>
</div>

