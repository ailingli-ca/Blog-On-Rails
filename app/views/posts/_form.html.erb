<div class="m-3">
    <%= form_with(model: @post) do |form| %>
        <div class= "mt-4">
            <%= form.label :title%>
            <br>
            <%= form.text_field :title, class: "form-control my-2" %>
        </div>
        <div class = "mt-3">
            <%= form.label :body %>
            <br>
            <%= form.text_area :body, class: "form-control mt-2 mb-3" %>
        </div>
        <%= form.submit @button_text, class: "btn btn-outline-primary" %>
    <% end %>
</div>